{
  "name": "fokus-pomodoro",
  "version": "1.0.0",
  "description": "A web-based Pomodoro technique app for improving productivity",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
